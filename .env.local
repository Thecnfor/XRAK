# =============================================================================
# XRAK 开发环境配置
# =============================================================================
# 此文件用于本地开发环境，不应提交到版本控制系统

# =============================================================================
# 基础应用配置
# =============================================================================

NEXT_PUBLIC_APP_NAME=XRAK
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:8000

# =============================================================================
# API 配置
# =============================================================================

NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
BLOG_API_URL=http://localhost:8000/api/blog-data
API_TIMEOUT=10000
API_MAX_RETRIES=3

# =============================================================================
# ISR 配置 - 开发环境优化
# =============================================================================

# 开发环境使用较短的重新验证时间以便快速测试
ISR_REVALIDATE_TIME=60
ISR_STALE_TIME=300
ISR_ENABLE_ON_DEMAND=true
ISR_MAX_RETRIES=3
ISR_RETRY_DELAY=1000

# 开发环境不启用构建时预加载
ISR_BUILD_PRELOAD=false
ISR_PRELOAD_CATEGORIES=tech,architecture,frontend
ISR_PRELOAD_MAX_ARTICLES=5

# 开发环境启用运行时更新
ISR_RUNTIME_UPDATE=true
ISR_UPDATE_INTERVAL=300
ISR_BACKGROUND_UPDATE=false
ISR_WEBHOOK_SECRET=dev-webhook-secret

# =============================================================================
# 缓存配置
# =============================================================================

# 开发环境使用内存缓存
MEMORY_CACHE_MAX_SIZE=50
MEMORY_CACHE_TTL=1800

# =============================================================================
# 图片优化配置
# =============================================================================

IMAGE_REVALIDATE_TIME=3600
IMAGE_STALE_TIME=7200
IMAGE_MAX_AGE=86400
IMAGE_QUALITY=75
IMAGE_FORMATS=webp,jpeg,png

# =============================================================================
# 开发工具配置
# =============================================================================

DEBUG=true
SHOW_DETAILED_ERRORS=true
ENABLE_HOT_RELOAD=true
LOG_LEVEL=debug

# =============================================================================
# 特性开关
# =============================================================================

ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_PWA=false
ENABLE_OFFLINE_SUPPORT=false
ENABLE_I18N=false
DEFAULT_LOCALE=zh-CN

# =============================================================================
# 构建配置
# =============================================================================

ANALYZE_BUNDLE=false
ENABLE_SOURCE_MAPS=true
BUILD_OUTPUT_DIR=.next