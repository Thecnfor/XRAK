# =============================================================================
# XRAK 项目环境变量配置示例
# =============================================================================
# 复制此文件为 .env.local (开发环境) 或 .env.production (生产环境)
# 并根据实际需求修改相应的值

# =============================================================================
# 基础应用配置
# =============================================================================

# 应用名称
NEXT_PUBLIC_APP_NAME=XRAK

# 应用版本
NEXT_PUBLIC_APP_VERSION=1.0.0

# 应用环境 (development | production | test)
NODE_ENV=development

# 应用基础URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# API 配置
# =============================================================================

# API 基础URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# 内容服务API URL (用于获取文章和分类数据)
NEXT_PUBLIC_API_URL=http://localhost:8000

# 外部博客API URL (生产环境使用)
BLOG_API_URL=https://api.example.com/blog

# API 超时时间 (毫秒)
API_TIMEOUT=10000

# API 重试次数
API_MAX_RETRIES=3

# =============================================================================
# ISR (Incremental Static Regeneration) 配置
# =============================================================================

# ISR 重新验证时间 (秒)
# 开发环境建议: 60, 生产环境建议: 3600
ISR_REVALIDATE_TIME=60

# ISR 过期缓存可用时间 (秒)
# 开发环境建议: 300, 生产环境建议: 7200
ISR_STALE_TIME=300

# 是否启用按需重新验证
ISR_ENABLE_ON_DEMAND=true

# ISR 最大重试次数
ISR_MAX_RETRIES=3

# ISR 重试延迟 (毫秒)
ISR_RETRY_DELAY=1000

# 构建时预加载配置
ISR_BUILD_PRELOAD=false
ISR_PRELOAD_CATEGORIES=tech,architecture,frontend
ISR_PRELOAD_MAX_ARTICLES=10

# 运行时更新配置
ISR_RUNTIME_UPDATE=true
ISR_UPDATE_INTERVAL=300
ISR_BACKGROUND_UPDATE=false
ISR_WEBHOOK_SECRET=your-webhook-secret-here

# =============================================================================
# 缓存配置
# =============================================================================

# Redis 配置 (如果使用 Redis 缓存)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# 内存缓存配置
MEMORY_CACHE_MAX_SIZE=100
MEMORY_CACHE_TTL=3600

# =============================================================================
# 图片优化配置
# =============================================================================

# 图片缓存重新验证时间 (秒)
IMAGE_REVALIDATE_TIME=86400

# 图片过期缓存可用时间 (秒)
IMAGE_STALE_TIME=604800

# 图片最大缓存时间 (秒)
IMAGE_MAX_AGE=31536000

# 图片质量 (1-100)
IMAGE_QUALITY=80

# 支持的图片格式
IMAGE_FORMATS=webp,avif,jpeg,png

# =============================================================================
# 安全配置
# =============================================================================

# JWT 密钥 (生产环境必须设置)
JWT_SECRET=your-super-secret-jwt-key-here

# 加密密钥
ENCRYPTION_KEY=your-encryption-key-here

# CORS 允许的域名
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# 数据库配置 (如果使用数据库)
# =============================================================================

# 数据库URL
DATABASE_URL=postgresql://username:password@localhost:5432/xrak

# 数据库连接池大小
DATABASE_POOL_SIZE=10

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别 (error | warn | info | debug)
LOG_LEVEL=info

# 是否启用日志文件
LOG_TO_FILE=false

# 日志文件路径
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# 监控和分析
# =============================================================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# Sentry DSN
SENTRY_DSN=

# 是否启用性能监控
ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# 开发工具配置
# =============================================================================

# 是否启用调试模式
DEBUG=false

# 是否显示详细错误信息
SHOW_DETAILED_ERRORS=true

# 是否启用热重载
ENABLE_HOT_RELOAD=true

# =============================================================================
# 第三方服务配置
# =============================================================================

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 云存储配置 (AWS S3, 阿里云 OSS 等)
CLOUD_STORAGE_PROVIDER=aws
CLOUD_STORAGE_BUCKET=your-bucket-name
CLOUD_STORAGE_REGION=us-east-1
CLOUD_STORAGE_ACCESS_KEY=your-access-key
CLOUD_STORAGE_SECRET_KEY=your-secret-key

# CDN 配置
CDN_URL=https://cdn.yourdomain.com

# =============================================================================
# 特性开关
# =============================================================================

# 是否启用实验性功能
ENABLE_EXPERIMENTAL_FEATURES=false

# 是否启用 PWA
ENABLE_PWA=false

# 是否启用离线支持
ENABLE_OFFLINE_SUPPORT=false

# 是否启用国际化
ENABLE_I18N=false

# 默认语言
DEFAULT_LOCALE=zh-CN

# 支持的语言
SUPPORTED_LOCALES=zh-CN,en-US

# =============================================================================
# 构建配置
# =============================================================================

# 是否启用 Bundle 分析
ANALYZE_BUNDLE=false

# 是否启用源码映射
ENABLE_SOURCE_MAPS=true

# 构建输出目录
BUILD_OUTPUT_DIR=.next

# 静态资源前缀
ASSET_PREFIX=

# =============================================================================
# 性能配置
# =============================================================================

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=10

# 请求超时时间 (毫秒)
REQUEST_TIMEOUT=30000

# 内存限制 (MB)
MEMORY_LIMIT=512

# CPU 限制 (核心数)
CPU_LIMIT=1